{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@configs/*": [
        "src/configs/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@service/*": [
        "src/services/service/*"
      ],
      "@booking/*": [
        "src/services/booking/*"
      ],
      "@showTime/*": [
        "src/services/showTime/*"
      ],
      "@store/*": [
        "src/common/store/*"
      ],
      "@thongke/*": [
        "src/services/thongke/*"
      ]
    }
  },
  "include": [
    "src",
    "public/assets/js/js",
    "public/assets/js/contact.js",
    "public/assets/js/heandline.js",
    "public/assets/js/main.js",
    "public/assets/js/nice-select.js",
    "public/assets/js/plugins.js",
    "public/assets/js/viewport.jquery.js",
    "public/assets/images/images",
    "public/assets/images/movie",
    "public/assets/images/newslater",
    "public/assets/images/ticket",
    "public/assets/images/logo",
    "public/assets/images/banner",
    "public/assets/images/account"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}